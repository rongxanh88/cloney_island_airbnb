<div class="container">
    <div id="map"></div>
    <script>
    function initMap() {
      var uluru = {lat: -25.363, lng: 131.044};
      var map = new google.maps.Map(document.getElementById('map'), {
        zoom: 4,
        center: uluru
      });
      var marker = new google.maps.Marker({
        position: uluru,
        map: map
      });
    }
    </script>
    <script src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['Google-API-Key'] %>&callback=initMap"async defer>
    </script>

    <h2><%= link_to "See all >", listings_path %></h2>
    <%=render partial: "shared/vertical_listing_card" %>
  </div>