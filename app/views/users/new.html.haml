.create-account-box
  %h1 Create a New Account
  .form
    = form_for @user, :html => {:class => "form-horizontal"} do |f|
      .field.form-group
      = f.label :email, "Email", class: 'control-label col-sm-4'
      .col-sm-6
      = f.text_field :email
      .field.form-group
      = f.label :first_name, "First name", class: 'control-label col-sm-4'
      .col-sm-6
      = f.text_field :first_name
      .field.form-group
      = f.label :last_name, "Last name", class: 'control-label col-sm-4'
      .col-sm-6
      = f.text_field :last_name
      .field.form-group
      = f.label :phone_number, "Phone number", class: 'control-label col-sm-4'
      .col-sm-6
      = f.text_field :phone_number
      .field.form-group
      = f.label :birthday, "Birthday", class: 'control-label col-sm-4'
      .col-sm-8
      = f.date_select :birthday, start_year: 1900, end_year: Date.today.year
      .field.form-group
      = f.label :password, "Password", class: 'control-label col-sm-4'
      .col-sm-6
      = f.password_field :password
      .field.form-group
      = f.label :password_confirmation, "Password confirmation", class: 'control-label col-sm-4'
      .col-sm-6
      = f.password_field :password_confirmation
      .actions.form-group
        .col-sm-offset-6.col-sm-6
          = f.submit "Sign Up"


  .flash
    - if flash[:error]
      %p
        = flash[:error]
